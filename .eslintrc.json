{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-typescript",
    "plugin:react/recommended",
    "plugin:@next/next/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["tsconfig.json"]
  },
  "rules": {
    "class-methods-use-this": "off",
    "no-plusplus": "off",
    "react/prop-types": "off",
    "no-underscore-dangle": "off"
  },
  "settings": {
    "next": {
      "rootDir": "packages/default-theme"
    },
    "react": {
      "version": "detect"
    }
  }
}
