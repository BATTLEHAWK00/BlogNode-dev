{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["../../.eslintrc.json"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["tsconfig.json"]
  },
  "rules": {
    "no-console": "error",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "@typescript-eslint/no-explicit-any": "error"
  }
}
