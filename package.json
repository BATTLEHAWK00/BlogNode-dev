{
  "name": "blognode-dev",
  "version": "1.0.0",
  "description": "一个使用Node.js搭建的博客系统",
  "repository": "https://github.com/BATTLEHAWK00/BlogNode-dev",
  "author": "BATTLEHAWK00 <battlehawk0_0@163.com>",
  "license": "AGPL-3.0-or-later",
  "main": "package.json",
  "private": true,
  "scripts": {
    "commitlint": "commitlint",
    "postinstall": "husky install",
    "watch": "concurrently npm:watch:theme npm:watch:renderer npm:start:dev:debug",
    "watch:theme": "cd packages/default-theme && yarn watch",
    "watch:renderer": "cd packages/renderer/react && tsc -w",
    "start": "cross-env NODE_ENV=development && cd packages/core && blognode start",
    "start:debug": "cross-env NODE_ENV=development && cd packages/core && blognode start --loglevel=debug",
    "start:trace": "cross-env NODE_ENV=development && cd packages/core && blognode start --loglevel=trace",
    "start:dev": "cd packages/core && nodemon --config config/nodemon.json bin/entry.ts -- start",
    "start:dev:debug": "cd packages/core && nodemon --config ./config/nodemon.json bin/entry.ts -- start --loglevel=debug",
    "start:dev:trace": "cd packages/core && nodemon --config ./config/nodemon.json bin/entry.ts -- start --loglevel=trace",
    "lint": "eslint packages/core --ext ts --fix --cache",
    "test": "mocha",
    "prebuild:core": "yarn test && cd packages/core && tsc --emitDeclarationOnly",
    "build:core": "cd packages/core && ts-node -r tsconfig-paths/register bin/build.ts",
    "theme:dev": "cd packages/default-theme && yarn dev",
    "build:theme": "cd packages/default-theme && yarn build",
    "build:theme:pages": "cd packages/default-theme && yarn build:pages",
    "build:theme:server": "cd packages/default-theme/server && yarn build:server",
    "build:renderer": "cd packages/renderer/react && tsc",
    "build": "concurrently npm:build:core npm:build:theme npm:build:renderer",
    "clean:dep": "rimraf node_modules packages/*/node_modules packages/theme/*/node_modules dist packages/*/dist packages/theme/*/dist",
    "clean:tmp": "rimraf dist packages/*/dist packages/theme/*/dist",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "packages/renderer/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@next/eslint-plugin-next": "^12.1.6",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "gulp-clean": "^0.4.0",
    "gulp-esbuild": "^0.10.3",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "tsc-alias": "^1.6.8",
    "typescript": "^4.3.5",
    "webpack": "^5.73.0"
  }
}
